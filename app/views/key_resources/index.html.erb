<% if current_user %>
<nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-3">
  <%= link_to 'Key Resources', key_resources_path, class: 'navbar-brand' %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav ml-auto">
      <li class="nav-item">
        <%= link_to 'New Key Resource', new_key_resource_path, class: 'nav-link' %>
      </li>
    </ul>
  </div>
</nav>
<% end %>

<table class='table table-striped table-bordered table-hover table-sm'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th>Description</th>
      <th>Contexts</th>
      <th>Keywords</th>
      <th>Categories</th>
      <th>Created by</th>
      <th>Updated by</th>
      <% if current_user.present? %>
        <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @key_resources.each do |key_resource| %>
      <tr>
        <td><%= key_resource.title %></td>
        <td><%= key_resource.url %></td>
        <td><%= key_resource.description %></td>
        <td><%= key_resource.contexts %></td>
        <td><%= key_resource.keywords %></td>
        <td><%= key_resource.categories %></td>
        <td><%= key_resource.created_by %></td>
        <td><%= key_resource.updated_by %></td>
        <% if current_user.present? %>
          <td><%= link_to 'Show', key_resource %></td>
          <td><%= link_to 'Edit', edit_key_resource_path(key_resource) %></td>
          <td><%= link_to 'Delete', key_resource, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
